{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "mapRoot": "",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "outDir": "public",
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es6",
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "jasmine",
            "hammerjs",
            "node",
            "core-js"
        ]
    },
    "exclude": [
        "node_modules",
        ".build",
        "dist",
        "public",
        "site/.baseDir.ts",
        "ng2-material.d.ts",
        "src"
    ],
    "compileOnSave": true
}
